
@{
    Layout = "~/Views/Layout/Layout.cshtml";
    Page.Title = "Ingresar";
}


<!--La división principal de la página-->
<div align="center">

    @model MyBattlePong2.Models.InicioModel
    @using (Html.BeginForm("Inicio", "Inicio", FormMethod.Post,
                new { enctype = "multipart/form-data" }))
    {

        <p>Usuario1:</p>
        @Html.TextBoxFor(x => x.Usuario, new { @class = "input1" })
        <br />
        <p>Usuario2:</p>
        @Html.PasswordFor(x => x.Contrasena, new { @class = "input1" })

        <br /><br />
        <input type="submit" value="Ingresar" class="boton_base" />
        <br />

    }

    <p><a href="Registrarse/Registrarse">Registrarse</a></p>
    <br />

</div>