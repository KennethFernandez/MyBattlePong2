<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@Page.Title</title>
    <link href="~/Content/boilerplate.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Untitled-2.css" rel="stylesheet" type="text/css">
    <link href="~/Content/SpryAssets/SpryMenuBarHorizontal.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Base.css" rel="stylesheet" type="text/css">
    <script src="~/Scripts/respond.min.js"></script>
    <script src="~/Content/SpryAssets/SpryMenuBar.js" type="text/javascript"></script>
</head>
<body>

    <header>

        <div align="center">
            <img src="~/Images/LogoMyBattlePong.png" width="550" height="122" align="middle">
        </div>
        <div class="Fondo">
            <ul id="MenuBar1" class="MenuBarHorizontal">

                <li><a href="#">Reportes</a> </li>
                <li><a href="#">Nuevo Juego</a></li>
                <li><a href="#">Buscar Partida</a></li>
                <li><a href="#">Perfil </a></li>
                <li><a href="#">Desconectarse </a></li>
                <li></li>
            </ul>
        </div>
        <script type="text/javascript">
            var MenuBar1 = new Spry.Widget.MenuBar("MenuBar1", {
                imgDown: "Content/SpryAssets/SpryMenuBarDownHover.gif",
                imgRight: "Content/SpryAssets/SpryMenuBarRightHover.gif"
            });
        </script>
    </header>

    <p>&nbsp; </p>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>


    <footer>
        <div align="center">
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - MyBattlePong</p>
                </div>
            </div>
    </footer>

    @RenderSection("Scripts", required: false)

</body>

