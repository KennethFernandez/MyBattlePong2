@{
    Layout = "~/Views/Layout/Layout.cshtml";
    Page.Title = "Ingresar";
}


<!--La división principal de la página-->
<div class="main-box" align="center">
                    <br /><br />

                    @model MyBattlePong2.Models.InicioModel
                    @using (Html.BeginForm("Inicio", "Inicio", FormMethod.Post,
                             new { enctype = "multipart/form-data" }))
                    {

                        <p>Usuario:</p>
                        @Html.TextBoxFor(x => x.Usuario, new { @class = "input1" })
                        <br />
                        <p>Contraseña:</p>
                        @Html.PasswordFor(x => x.Contrasena, new { @class = "input1" })

                        <br /><br />
                        <input type="submit" value="Ingresar" class="boton_base" />
                        <br />}

                    <p><a href="Registrarse/Registrarse">Registrarse</a></p>
                    <br />

                    <p>Nombre:</p><p><label for='name' id='name'> Armando </label></p><br />
                    <input type='hidden' name='sala' id='sala' value='1' />
                    <p>Message:</p><input type='text' name='message' id='message' maxlength='140' />
                    <input type='button' name='sendmessage' id='sendmessage' value='Send' />
                    <input type='hidden' name='usuario' id='usuario' value='1' />
                    <div id='chatWindow' class='chat'></div>
                    <div id='FanWindow' class='chat'></div>

                    <div class='calendar'></div>


                <h2>Tipo</h2><select>
                <option>Costa Rica</option>
                <option>Estados Unidos</option>
                <option>Mexico</option></select>

</div>
