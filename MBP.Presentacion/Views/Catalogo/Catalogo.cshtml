@{
    Layout = "~/Views/Layout/Layout.cshtml";
    ViewBag.Title = "Catalogo";
}

@section scripts{
    
    <link href="~/Content/ButtonONOFF.css" rel="stylesheet" type="text/css">

    }


<div id="cont">
    <div id="left">
        <br />
        <table id="table1" class="Tabla_naranaja">
            <colgroup>
                <col width="100" height="100" />
            </colgroup>
            <tbody>
                <tr><td><div>Nave1</div></td></tr>
                <tr><td><div>Nave2</div></td></tr>
                <tr><td><div>Nave3</div></td></tr>
                <tr><td><div>Nave4</div></td></tr>
            </tbody>
        </table>
    </div>

    <div id="right">
        @model MBP.CapaTransversal.ModelsMVC.NaveModel
@using (Html.BeginForm("Catalogo", "Catalogo", FormMethod.Post,
                new { enctype = "multipart/form-data" }))
    {
        <br />
        <label>Nombre:</label>
        @Html.TextBoxFor(x => x.nombre, new { @class = "input1" })
        <br />
        <br>
        <label>Puntaje:    </label>
        @Html.TextBoxFor(x => x.puntaje, new { @class = "input1" })
        <br /><br />
        <label>Tamaño X y Y:</label>
        @Html.DropDownListFor(x => x.tamanoX, new SelectList(
                  new List<Object>{ 
                       new { value = 1 , text = "1"  },
                       new { value = 2 , text = "2" },
                       new { value = 3 , text = "3"},
                       new { value = 4 , text = "4"}
                    },
                  "value",
                  "text",
                   2))
        @Html.DropDownListFor(x => x.tamanoY, new SelectList(
                  new List<Object>{ 
                       new { value = 1 , text = "1"  },
                       new { value = 2 , text = "2" },
                       new { value = 3 , text = "3"},
                       new { value = 4 , text = "4"}
                    },
                  "value",
                  "text",
                   2))
        <br /><br />
        @HelperCF.AyudaCargarArchivos()
        <br />
        <div class="onoffswitch">
            <label>
                Nave habilitada:
                @Html.CheckBoxFor(x => x.estado, new { @class = "input1", @name = "onoffswitch", @id = "myonoffswitch" })
            </label>
        </div>
        <br />
        <br />
        <input type="submit" name="Crear" class="boton_base" value="Crear" />
}
        <br />
        <br />
            <input type="submit" name="Modificar" class="boton_base" value="Modificar" />

        </div>

</div>

